<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        <h4>Burgers that need devouring:</h4>
        {{#each burgers}}
        {{#unless this.devoured}}
        <div>
          <form action="/burgers/{{this.id}}" method="PUT">
            <button type="submit" class='btn btn-warning'> {{this.burger_name}}</button>
          </form>
        </div>
        {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        <h4>Burgers that have been devoured:</h4>
        {{#each burgers}}
        {{#if this.devoured}}
        <div>
          <div>
            {{this.burger_name}}
          </div>
        </div>
        {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>
<br><br><br><br>

<div class="container">
  <h2>Add A Burger Option</h2>

  <div class="row">
    <div class="col s12">
      <form action="/burgers" method="POST">
        <input type="text" id="name" name="burger_name" placeholder="Uber Delicious Burger">
        <button type="submit" class="addBurgerButton">Add The Burger</button>
      </form>
    </div>
  </div>
</div>